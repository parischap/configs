{
	"name": "@parischap-dev/configs",
	"type": "module",
	"author": "Jérôme MARTIN",
	"license": "MIT",
	"scripts": {
		"tscheck": "tsc -b tsconfig.json --force --noEmit",
		"lint": "eslint .",
		"lint-fix": "eslint . --fix",
		"lint-rules": "pnpx @eslint/config-inspector",
		"update-config-files": "node ./dist/bin/update-config-files.js",
		"clean-config-files": "shx rm -rf package.json && shx rm -rf tsconfig.json",
		"bundle": "vite-node ./esm/bin/bundle-files.ts",
		"compile": "pnpm bundle && pnpm prodify && tsc -b tsconfig.esm.json --emitDeclarationOnly --force",
		"build-and-publish": "pnpm build && pnpm checks && pnpm publish-to-npm",
		"docgen": "echo \"docgen not activated for this package\"",
		"circular": "madge --extensions ts --circular --no-color --no-spinner esm",
		"checks": "pnpm circular && pnpm lint && pnpm tscheck && pnpm test",
		"test": "vitest run",
		"clean-prod": "shx rm -rf dist && shx mkdir -p dist",
		"publish-to-npm": "cd dist && npm publish --access=public && cd ..",
		"install-prod": "cd dist && pnpm i && cd ..",
		"build": "pnpm clean-prod && pnpm --if-present pre-build && pnpm compile && pnpm --if-present post-build && pnpm install-prod",
		"prodify": "node ./dist/bin/prodify.js",
		"examples": "",
		"pre-build": "pnpm i",
		"post-build": "pnpm update-config-files"
	},
	"packageManager": "pnpm@10.18.1",
	"devDependencies": {
		"ts-deepmerge": "^7.0.3",
		"globals": "^16.4.0",
		"@tsconfig/strictest": "^2.0.6",
		"shx": "^0.4.0",
		"@parischap/configs": "link:dist",
		"@parischap/test-utils": "^0.14.0",
		"@types/node": "^24.7.0",
		"eslint": "^9.37.0",
		"@eslint/eslintrc": "^3.3.1",
		"@eslint/js": "^9.37.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-functional": "^9.0.2",
		"eslint-plugin-yml": "^1.19.0",
		"@eslint/markdown": "^7.3.0",
		"@html-eslint/eslint-plugin": "^0.47.0",
		"@html-eslint/parser": "^0.47.0",
		"@eslint/json": "^0.13.2",
		"prettier": "^3.6.2",
		"typescript": "^5.9.3",
		"tsx": "^4.20.6",
		"typescript-eslint": "^8.45.0",
		"vitest": "^3.2.4",
		"vite": "^7.1.9",
		"vite-node": "^3.2.4",
		"madge": "^8.0.0",
		"@babel/core": "^7.28.4",
		"@babel/plugin-transform-export-namespace-from": "^7.27.1",
		"@babel/plugin-transform-modules-commonjs": "^7.27.1",
		"babel-plugin-annotate-pure-calls": "^0.5.0",
		"@babel/cli": "^7.28.3",
		"@effect/docgen": "^0.5.2",
		"prettier-plugin-jsdoc": "^1.3.3",
		"@eslint/core": "^0.16.0",
		"@types/eslint": "^9.6.1",
		"@types/eslint-config-prettier": "^6.11.3"
	},
	"pnpm": {
		"patchedDependencies": {},
		"overrides": {}
	},
	"dependencies": {
		"@effect/experimental": "^0.56.0",
		"minimatch": "^10.0.3",
		"effect": "^3.18.1",
		"@effect/platform": "^0.92.1",
		"@effect/platform-node": "^0.98.3",
		"ts-deepmerge": "^7.0.3"
	},
	"publishConfig": {
		"exports": {
			".": {
				"types": "./dts/index.d.ts",
				"import": "./esm/index.js"
			}
		},
		"dependencies": {},
		"files": [
			"*",
			"!*.map"
		],
		"scripts": {},
		"devDependencies": {},
		"peerDependencies": {},
		"publishConfig": {},
		"packageManager": "",
		"pnpm": {},
		"type": "module"
	},
	"description": "Utility to generate configuration files in a repository",
	"module": "./esm/index.js",
	"exports": {
		".": {
			"import": "./esm/index.ts"
		}
	},
	"sideEffects": [],
	"peerDependencies": {},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/parischap/configs.git"
	},
	"homepage": "https://github.com/parischap/configs"
}
