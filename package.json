{
  "name": "@parischap-dev/configs",
  "description": "Utility to generate configuration files in a repository",
  "author": "Jérôme MARTIN",
  "license": "MIT",
  "scripts": {
    "tscheck": "tsc -b tsconfig.json --force --noEmit",
    "lint": "eslint .",
    "lint-rules": "pnpx @eslint/config-inspector",
    "format": "prettier . --write",
    "update-config-files": "node ./node_modules/update-config-files",
    "clean-config-files": "shx rm -f package.json && shx rm -f tsconfig.json",
    "clean-node-modules": "shx rm -rf node_modules",
    "reinstall-all-dependencies": "pnpm i --force",
    "circular": "madge --extensions ts --circular --no-color --no-spinner esm",
    "checks": "pnpm circular && pnpm lint && pnpm tscheck && pnpm test",
    "test": "vitest run",
    "clean-prod": "shx rm -rf dist && shx mkdir -p dist",
    "build": "pnpm clean-prod && pnpm --if-present pre-build && pnpm compile && pnpm --if-present post-build && cd ${prodFolderName} && pnpm i && cd ..",
    "examples": "",
    "compile": "tsc -b tsconfig.esm.json --force && babel dist --plugins annotate-pure-calls --out-dir dist --source-maps && pnpm prodify-lib"
  },
  "packageManager": "pnpm@10.20.0",
  "devDependencies": {
    "typescript": "^5.9.3",
    "globals": "^16.4.0",
    "eslint": "^9.37.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-functional": "^9.0.2",
    "eslint-plugin-yml": "^1.19.0",
    "@eslint/markdown": "^7.3.0",
    "@html-eslint/eslint-plugin": "^0.47.0",
    "@html-eslint/parser": "^0.47.0",
    "@eslint/json": "^0.13.2",
    "prettier": "^3.6.2",
    "typescript-eslint": "^8.45.0",
    "prettier-plugin-jsdoc": "^1.3.3",
    "@tsconfig/strictest": "^2.0.6",
    "@types/node": "^24.7.0",
    "shx": "^0.4.0",
    "madge": "^8.0.0",
    "vitest": "^3.2.4",
    "vite": "npm:rolldown-vite@^7.1.17",
    "vite-node": "^3.2.4",
    "@babel/core": "^7.28.4",
    "babel-plugin-annotate-pure-calls": "^0.5.0",
    "@babel/plugin-transform-export-namespace-from": "^7.27.1",
    "@babel/plugin-transform-modules-commonjs": "^7.27.1",
    "@parischap/configs": "link:../configs/dist/.",
    "@parischap/test-utils": "link:../test-utils/.",
    "@types/eslint": "^9.6.1",
    "@types/eslint-config-prettier": "^6.11.3"
  },
  "type": "module",
  "module": "./esm/index.js",
  "exports": {
    ".": {
      "import": "./esm/index.js"
    }
  },
  "dependencies": {
    "effect": "^3.18.1",
    "@effect/platform": "^0.92.1",
    "@effect/platform-node": "^0.98.3",
    "@effect/cluster": "^0.50.3",
    "@effect/rpc": "^0.71.0",
    "@effect/sql": "^0.46.0",
    "@effect/workflow": "^0.11.3"
  },
  "peerDependencies": {
    "globals": "^16.4.0",
    "eslint": "^9.37.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-functional": "^9.0.2",
    "eslint-plugin-yml": "^1.19.0",
    "@eslint/markdown": "^7.3.0",
    "@html-eslint/eslint-plugin": "^0.47.0",
    "@html-eslint/parser": "^0.47.0",
    "@eslint/json": "^0.13.2",
    "prettier": "^3.6.2",
    "typescript-eslint": "^8.45.0",
    "prettier-plugin-jsdoc": "^1.3.3"
  },
  "publishConfig": {},
  "repository": {
    "type": "git",
    "url": "git+https://github.com/parischap/configs.git"
  },
  "homepage": "https://github.com/parischap/configs",
  "sideEffects": [],
  "private": true
}