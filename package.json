{
  "name": "@parischap-dev/configs",
  "type": "module",
  "description": "Utility to generate configuration files in a repository",
  "author": "Jérôme MARTIN",
  "license": "MIT",
  "scripts": {
    "tscheck": "tsc -b tsconfig.json --force --noEmit",
    "lint": "eslint .",
    "lint-rules": "pnpx @eslint/config-inspector",
    "format": "prettier . --write",
    "update-config-files": "vite-node node_modules/@parischap/configs/esm/bin/update-config-files.ts",
    "rmrf": "node node_modules/@parischap/configs/esm/bin/rmrf.mjs",
    "mkdirp": "node node_modules/@parischap/configs/esm/bin/mkdirp.mjs",
    "clean-node-modules": "rm node  node_modules",
    "clean-config-files": "pnpm rmrf tsconfig.json && pnpm rmrf package.json",
    "reinstall-all-dependencies": "pnpm i --force",
    "build-all": "pnpm build",
    "circular": "madge --extensions ts --circular --no-color --no-spinner esm",
    "checks": "pnpm circular && pnpm lint && pnpm tscheck && pnpm test",
    "test": "vitest run",
    "clean-prod": "pnpm rmrf dist && pnpm mkdirp dist",
    "build": "pnpm clean-prod && pnpm compile && cd ${prodFolderName} && pnpm i && cd ..",
    "examples": "",
    "bundle": "bundle-files",
    "compile": "pnpm bundle && pnpm prodify-bundle"
  },
  "devDependencies": {
    "@parischap/configs": "workspace:@parischap-dev/configs@*",
    "prettier": "3.6.2",
    "@tsconfig/strictest": "2.0.6",
    "@effect/language-service": "0.55.2",
    "@types/node": "24.7.0",
    "vite-node": "5.0.0",
    "typescript": "5.9.3",
    "jiti": "2.6.1",
    "vitest": "4.0.7",
    "madge": "8.0.0",
    "@effect/experimental": "0.57.0",
    "vite": "npm:rolldown-vite@7.1.17",
    "@babel/core": "7.28.4",
    "babel-plugin-annotate-pure-calls": "0.5.0",
    "@babel/plugin-transform-export-namespace-from": "7.27.1",
    "@babel/plugin-transform-modules-commonjs": "7.27.1",
    "@types/eslint": "^9.6.1",
    "@types/eslint-config-prettier": "^6.11.3"
  },
  "packageManager": "pnpm@10.22.0",
  "module": "./esm/main.js",
  "exports": {
    ".": {
      "import": "./esm/index.js"
    },
    "./tests": {
      "import": "./esm/index.tests.js"
    },
    "./prettierConfig": {
      "import": "./esm/prettierConfig.ts"
    },
    "./eslintConfigNode": {
      "import": "./esm/eslintConfigNode.ts"
    },
    "./eslintConfigBrowser": {
      "import": "./esm/eslintConfigBrowser.ts"
    },
    "./eslintConfigLibrary": {
      "import": "./esm/eslintConfigLibrary.ts"
    }
  },
  "peerDependencies": {
    "globals": "16.4.0",
    "eslint": "9.37.0",
    "@eslint/js": "9.37.0",
    "@eslint/json": "0.14.0",
    "@eslint/markdown": "7.3.0",
    "@html-eslint/eslint-plugin": "0.47.0",
    "@html-eslint/parser": "0.47.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-functional": "9.0.2",
    "eslint-plugin-import-x": "4.16.1",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-yml": "1.19.0",
    "typescript-eslint": "8.45.0",
    "prettier-plugin-jsdoc": "1.3.3",
    "effect": "3.19.0",
    "@effect/platform": "0.93.0",
    "@effect/platform-node": "0.100.0",
    "@effect/cluster": "0.52.5",
    "@effect/rpc": "0.72.1",
    "@effect/sql": "0.48.0",
    "@effect/workflow": "0.12.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/parischap/configs.git"
  },
  "homepage": "https://github.com/parischap/configs",
  "private": true
}