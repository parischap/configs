{
  "name": "@parischap-dev/configs",
  "description": "Utility to generate configuration files in a repository",
  "type": "module",
  "author": "Jérôme MARTIN",
  "license": "MIT",
  "scripts": {
    "test": "vitest run",
    "tscheck": "tsgo -b tsconfig.json --force",
    "lint": "eslint .",
    "format": "prettier .",
    "clean-config-files": "jiti node_modules/@parischap/configs/esm/bin/clean-config-files.ts -activePackageOnly",
    "clean-node-modules": "jiti node_modules/@parischap/configs/esm/bin/clean-node-modules.ts -activePackageOnly",
    "clean-prod": "pnpm rmrf dist && pnpm mkdirp dist",
    "generate-config-files": "jiti node_modules/@parischap/configs/esm/bin/generate-config-files.ts -activePackageOnly",
    "clean-all-config-files": "jiti node_modules/@parischap/configs/esm/bin/clean-config-files.ts",
    "clean-all-node-modules": "jiti node_modules/@parischap/configs/esm/bin/clean-node-modules.ts",
    "clean-all-prod": "jiti node_modules/@parischap/configs/esm/bin/clean-prod.ts",
    "generate-all-config-files": "jiti node_modules/@parischap/configs/esm/bin/generate-config-files.ts",
    "update-all-exports": "jiti node_modules/@parischap/configs/esm/bin/update-exports.ts",
    "watch-all-for-exports": "jiti node_modules/@parischap/configs/esm/bin/update-exports.ts -watch",
    "reinstall-all-dependencies": "pnpm i --force",
    "circular": "madge --extensions ts --circular --no-color --no-spinner esm",
    "checks": "pnpm circular && pnpm tscheck && pnpm lint && pnpm test",
    "tsconfig": "tsc --showConfig --project tsconfig.esm.json",
    "build": "pnpm clean-prod && pnpm compile && cd dist && pnpm i && cd ..",
    "examples": "",
    "update-exports": "jiti node_modules/@parischap/configs/esm/bin/update-exports.ts -activePackageOnly",
    "watch-for-exports": "jiti node_modules/@parischap/configs/esm/bin/update-exports.ts -watch -activePackageOnly"
  },
  "devDependencies": {
    "@parischap/configs": "git+ssh://github.com/parischap/configs",
    "globals": "17.0.0",
    "@eslint/js": "9.39.2",
    "@eslint/json": "0.14.0",
    "@eslint/markdown": "7.5.1",
    "@html-eslint/eslint-plugin": "0.52.1",
    "@html-eslint/parser": "0.52.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-functional": "9.0.2",
    "eslint-plugin-yml": "1.19.1",
    "typescript-eslint": "8.51.0",
    "vitest": "4.0.16",
    "@effect/language-service": "0.56.0",
    "@types/node": "24.10.1",
    "@typescript/native-preview": "7.0.0-dev.20260109.1",
    "jiti": "2.6.1",
    "prettier-plugin-jsdoc": "1.8.0",
    "prettier-plugin-organize-imports": "4.3.0",
    "@tsconfig/strictest": "2.0.8",
    "eslint": "9.39.2",
    "prettier": "3.7.4",
    "madge": "8.0.0",
    "@effect/experimental": "0.57.4",
    "@effect/platform": "0.93.3",
    "@effect/platform-node": "0.101.1",
    "@effect/cluster": "0.53.4",
    "@effect/rpc": "0.72.2",
    "@effect/sql": "0.48.0",
    "@effect/workflow": "0.13.0",
    "vite": "npm:rolldown-vite@7.3.0",
    "@babel/core": "7.28.5",
    "babel-plugin-annotate-pure-calls": "0.5.0",
    "@babel/plugin-transform-export-namespace-from": "7.27.1",
    "@babel/plugin-transform-modules-commonjs": "7.27.1"
  },
  "module": "./esm/index.js",
  "peerDependencies": {
    "effect": "3.19.6",
    "globals": "17.0.0",
    "@eslint/js": "9.39.2",
    "@eslint/json": "0.14.0",
    "@eslint/markdown": "7.5.1",
    "@html-eslint/eslint-plugin": "0.52.1",
    "@html-eslint/parser": "0.52.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-functional": "9.0.2",
    "eslint-plugin-yml": "1.19.1",
    "typescript-eslint": "8.51.0",
    "vitest": "4.0.16"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/parischap/configs.git"
  },
  "homepage": "https://github.com/parischap/configs",
  "private": true,
  "dependencies": {},
  "exports": {
    ".": {
      "default": "./esm/index.js"
    },
    "./tests": {
      "default": "./esm/index.tests.js"
    },
    "./EslintConfigNode": {
      "default": "./esm/eslint.config.node.ts"
    },
    "./EslintConfigPlain": {
      "default": "./esm/eslint.config.plain.ts"
    },
    "./TestUtils": {
      "default": "./esm/testUtils.ts"
    },
    "./VitestConfigNosource": {
      "default": "./esm/vitest.config.nosource.ts"
    },
    "./VitestConfigSource": {
      "default": "./esm/vitest.config.source.ts"
    },
    "./StarterMain": {
      "default": "./esm/starter/main.ts"
    },
    "./StarterTsdownConfig": {
      "default": "./esm/starter/tsdown.config.ts"
    }
  }
}
