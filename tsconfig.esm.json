{
  "compilerOptions": {
    "tsBuildInfoFile": ".tsbuildinfo/esm.tsbuildinfo",
    "rootDir": "esm",
    "outDir": "dist/esm",
    "declarationDir": "dist/dts",
    "noEmit": false,
    "emitDeclarationOnly": true
  },
  "extends": [
    "./tsconfig.base.json"
  ],
  "include": [
    "esm/**/*.js",
    "esm/**/*.mjs",
    "esm/**/*.cjs",
    "esm/**/*.ts",
    "esm/**/*.mts",
    "esm/**/*.cts"
  ]
}